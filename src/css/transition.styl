#renderer
  will-change opacity

#background-image
  will-change transform

body.transition
    #renderer,
    #markers
        opacity 0

body:not(.transition)
    #renderer
        transition opacity .4s ease
        transition-delay .1s

    #background-image
        transition transform .4s ease
        transform scale(1.2)

#markers
    transition opacity.4s ease
